{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level}] [{SourceContext}.{Method}] ({RequestId}): {Message} {NewLine}{Exception}"
        }
      }
    ]
  },
  "Jwt": {
    "Key": "ThisIsASecretKeyForDev",
    "Issuer": "SampleAuthService",
    "Audience": "SampleAuthService",
    "AccessTokenExpiresMinutes": 30,
    "RefreshTokenExpiresDays": 7
  }
}
